.pcHeader
  .header-Inner
    .main-Header
      = link_to image_tag("logo.png", class: "icon"),root_path
      .searchBox
        .form
          <input class="form__input" placeholder="キーワードから探す">
          = link_to image_tag("icon-search 1.png", class: "form__submit")
    .nav
      .listsLeft
        .listsLeft__first
          = link_to 'カテゴリー', '', class: 'catBtn'
          .display
            .category
              .category_tree
                %ul.category_list
                  - @parents.each do |parent|
                    %li.category_list_main 
                      =parent.category_name

                      %ul.category_list2
                        - parent.children.each do |child|
                          %li.category_list_sub
                            =link_to category_path(child) do
                              =child.category_name
                              
                              %ul.category_list3
                                - child.children.each do |grandchild|
                                  %li.category_list_item
                                    =link_to category_path(grandchild) do
                                      =grandchild.category_name
        .listsLeft__item
          =link_to "ブランド", "", class: "brandBtn"
          .display
            .category2
              .category2_tree
                %ul.category2_list
                  %li= link_to '1', '#', class: 'category2_list_item'
                  %li= link_to '2', '#', class: 'category2_list_item'
                  %li= link_to '3', '#', class: 'category2_list_item'
                  %li= link_to '4', '#', class: 'category2_list_item'
                  %li= link_to '5', '#', class: 'category2_list_item'
                  %li= link_to '6', '#', class: 'category2_list_item'
                  %li= link_to '7', '#', class: 'category2_list_item'
                  %li= link_to '8', '#', class: 'category2_list_item'
                  %li= link_to '9', '#', class: 'category2_list_item'
                  %li= link_to '10', '#', class: 'category2_list_item'
      .listsRight
        .listsRight__login
          -if user_signed_in?
            = link_to "ログアウト",users_logout_path , class: "login"
          -else
            = link_to "ログイン",new_user_session_path , class: "login"
        .listsRight__new
          -if user_signed_in?
            = link_to "#{current_user.nickname}",user_path(current_user), class: "new"
          -else 
            = link_to "新規会員登録", users_signup_index_path, class: "new"